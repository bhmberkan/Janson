@model Janson.Models.Entity.MesageBlogTBL


<div class="comment-form">
    <h4>Leave a Reply</h4>
    <form class="form-contact comment_form"  id="commentForm" method="post">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    @Html.TextAreaFor(x => x.icerik, 10, 4, new { @class = "form-control w-100", @id = "comment", @name = "comment", placeholder = "Yorumunuz", required = "true" })

                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.İsim, new { @class = "form-control", @name = "name", @id = "name", @placeholder = "isim", required = "true" })

                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.İsim, new { @class = "form-control", @name = "name", @id = "name", @placeholder = "Mail", @type = "email" , required = "true" })

                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    @Html.TextAreaFor(x => x.Photo, 7, 3, new { @class = "form-control", @name = "name", @id = "name", @placeholder = "photolink https://i.hizliresim.com/asd123.png formatında olmalıdır Hızlıresim sayfasını kullanın. " , required = "true" })

                </div>
            </div>
           
        </div>
        <div class="form-group">
            <button  class="button button-contactForm btn_1 boxed-btn">Yorum Ekle</button>
        </div>
    </form>
</div>