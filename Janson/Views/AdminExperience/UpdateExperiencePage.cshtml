@model Janson.Models.Entity.ExperienceTBL
@{
    ViewBag.Title = "UpdateExperiencePage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateExperiencePage</h2>

<br />


@using (Html.BeginForm("UpdateExperiencePages", "AdminExperience", FormMethod.Post))
{

    @Html.HiddenFor(x => x.ID) // hiddenfor arka planda çalışacak anlamında
    <br />

    @Html.Label("Baslik")
    @Html.TextBoxFor(x => x.baslik, new { @class = "form-control" })
    <br />

    
    @Html.Label("Tarih Aralığı")
    @Html.TextBoxFor(x => x.Aralık, new { @class = "form-control" })
    <br />

    
    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />

    
    @Html.Label("Link Yolu")
    @Html.TextBoxFor(x => x.LinkYolu, new { @class = "form-control" })
    <br />



    <button class="btn btn-primary"> Değişiklikleri Kaydet </button>

}