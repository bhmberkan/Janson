@using Janson.Models.Entity
@model List<PhotoTbl>


<div class="gallery-area section-padding40" style="background-color:rgb(0, 20, 45)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle mb-60">
                    <h2>Selected Portfolios</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-between" >
            @foreach (var x in Model)
            {
                <div class="offset-xl-1 col-xl-5 col-lg-6 col-md-6 col-sm-6">
                    <div class="box snake mb-30">
                        <div class="gallery-img small-img " style="background-image: url(@x.photo);"></div>
                        <div class="overlay">
                            <div class="overlay-content">
                                <a href="@x.photo" class="img-pop-up"><i class="ti-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>